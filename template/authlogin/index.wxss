/**index.wxss**/
.apifmLogin {
  /* 定位元素 fixed 类似相对定位包含其本身 */
  position: fixed;
  /* 外边距 距上 配合相对定位使用 fixed absolute*/
  top: 0;
  /* 外边距 距左 配合相对定位使用 fixed absolute*/
  left: 0;
  /* 宽 高 支持百分比、rpx*/
  width: 100%;
  height: 100%;
  /* 背景颜色 支持透明度 */
  background-color: rgba(0, 0, 0, 0.3);
  /* 控制显示的层级 数字越大 层级优先显示 */
  z-index: 99999999999;
  /* 设置子标签布局居中 */
  display: flex;
  /* 上下居中 */
  align-items: center;
  /* 左右居中 */
  justify-content: center;
}

.apifmLogin .s-b {
  width: 70%;
  height: 600rpx;
  /* 设置布局居中 注意在margin-top之前使用*/
  /* margin: 0 auto; */
  background-color: #fff;
  /* 设置外边距 */
  /* margin-top: 40%; */
  /* 设置圆角属性 */
  border-radius: 10rpx;
}

.apifmLogin .s-b .s-l-b {
  width: 80%;
  /* 设置字体居中 */
  text-align: center;
  /* 设置下边框样式 */
  border-bottom: 1px solid #f5f5f5;
  /* 设置布局居中 */
  margin: 0 auto;
  /* 设置内边距 */
  padding-top: 20rpx;
}

.apifmLogin .s-b .s-l-b image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  /* 设置image组件属性为块元素 */
  display: block;
  margin: 0 auto;
}

.apifmLogin .s-b .s-l-b text {
  /* 设置字体大小 */
  font-size: 32rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  /* 设置字体颜色 */
  color: #333;
}

.apifmLogin .s-b .s-t-b {
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  text-align: center;
}

.apifmLogin .s-b .s-t-b .s-t-n {
  width: 80%;
  font-size: 30rpx;
  color: #333;
  margin: 0 auto;
}

.apifmLogin .s-b .s-t-b .s-t-i {
  width: 80%;
  margin: 0 auto;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.apifmLogin .s-b .s-t-b .s-t-i text {
  margin-right: 10rpx;
  font-size: 26rpx;
}

/* button::after */
.apifmLogin .s-b button::after {
  border-radius: 4rpx;
  border: 0;
}

.apifmLogin .s-b .l {
  width: 80%;
  height: 70rpx;
  font-size: 30rpx;
  font-weight: normal;
  background-color: #04be01;
  color: #fff;
  margin-top: 25rpx;
}

.apifmLogin .s-b .c {
  width: 80%;
  height: 70rpx;
  font-size: 30rpx;
  font-weight: normal;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  background-color: #ccc;
  color: #333;
}