page {
  height: 100%;
}

.index-container {
  width: 100%;
  height: 100%;
  background-color: white;
}

.pro-info-img {
  width: 100%;
  height: 500rpx;
}

.pro-info-title {
  display: flex;
  align-items: center;
}

.pro-info-title .pro-info-subtitle {
  display: inline-block;
  background: #FE5D5C;
  color: #fff;
  font-size: 15rpx;
  border-radius: 5rpx;
  padding: 6rpx;
  margin-left: 20rpx;
}

.pro-info-title .pro-info-name {
  display: inline-block;
  font-size: 34rpx;
  font-weight: bold;
  margin-left: 5rpx;
}

.pro-info-coin-group {
  display: flex;
  padding-bottom: 20rpx;
  border-bottom: 10px solid rgba(248, 245, 253, 0.5);
}

.pro-info-coin {
  overflow: hidden;
  font-size: 35rpx;
  margin-left: 20rpx;
  color: #e64340;
}

.unit {
  font-size: 20rpx;
  color: #e64340;
  margin: 13rpx 0 10rpx 5rpx;
}

.goods-plus {
  font-size: 30rpx;
  font-weight: bold;
  margin: 4rpx 0 0 20rpx;
}

