@import "/template/authlogin/index.wxss";

page {
  background: #F6F9FF;
}

.info-group {
  width: 700rpx;
  height: 340rpx;
  position: relative;
  margin: 0 auto;
  margin-top: 24rpx;
  margin-bottom: 30rpx;
}

.bg-info {
  position: absolute;
  width: 100%;
  height: 340rpx;
}

.img-qr-code {
  position: relative;
  float: right;
  width: 42rpx;
  height: 42rpx;
  margin-right: 53rpx;
  margin-top: 53rpx;
}

.userinfo-avatar {
  position: relative;
  width: 92rpx;
  height: 92rpx;
  border-radius: 50%;
  margin-top: 44rpx;
  margin-left: 56rpx;
}

.userinfo-nickname {
  position: absolute;
  height: 32rpx;
  font-size: 32rpx;
  color: #FFFFFF;
  font-weight: bold;
  margin-left: 23rpx;
  margin-top: 70rpx;
}

.asset {
  position: absolute;
  width: 100%;
  display: flex;
  justify-content: space-around;
  margin-top: 50rpx;
}

.asset .item {
  display: flex;
  flex-direction: column;
  text-align: center;
  font-size: 13px;
  line-height: 20px;
}

.asset .item .text {
  font-size: 30rpx;
  margin-bottom: 10rpx;
  color: #FFFFFF;
}

.asset .item .tv {
  font-size: 30rpx;
  color: #FFFFFF;
}

.entry-info{
  width: 100%;
  height: 170rpx;
  background: #FFFFFF;
  margin-bottom: 22rpx;
}

.group-entry{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 90%;
  margin-left: 5%;
}
.group-entry .group-info{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.group-info .num{
  font-size: 40rpx;
  color: #FF8504;
  margin-top: 38rpx;
}

.group-info .title{
  font-size: 30rpx;
  color: #333333;
  margin-top: 18rpx;
}

.img-bg-entry{
  position: absolute;
  width: 100%;
  height: 170rpx;
}
.group-entry{
  position: absolute;
}

.ver-line{
  width: 1rpx;
  height: 80rpx;
  margin-top: 45rpx;
  background: rgba(0, 0, 0, 0.2);
}

.item-group {
  width: 100%;
  height: 114rpx;
  background: #FFFFFF;
}

.item-group .icon {
  width: 42rpx;
  height: 100%;
  margin-left: 49rpx;
}

.item-group .tv-content {
  display: inline-block;
  font-size: 28rpx;
  height: 114rpx;
  line-height: 114rpx;
  vertical-align: top;
  color: #333333;
  margin-left: 15rpx;
}

.item-group .icon-enter {
  width: 12rpx;
  height: 100%;
  float: right;
  margin-right: 35rpx;
}

/* 细线 */
.thin-line{
  height: 1px;
  margin-left: 90rpx;
  margin-top: -1px;
  background: #F6F9FF;
}

/* 粗线 */
.thick-line{
  height: 18rpx;
}


